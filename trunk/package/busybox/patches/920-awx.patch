+#define LINE_BUF 2048
+#define HASH_MAX	1536
+#define TR_START	"@TR<<"
+#define TR_END		">>"
+#define MAX_TR	32
+#define SSI_START "<%"
+#define SSI_END "%>"
+
+#undef fputs
