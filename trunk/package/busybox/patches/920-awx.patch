+static inline void put_var(vartype type, char *var)
+{
+	char *val;
+	
+	if (!do_putvar)
+		return;
+
+	val = strchr(var, '=');
+	if (!val)
+		return;
+	
+	*val = 0;
+	val++;
+	do_putvar(type, var, val);
+	
+	return;
+}
